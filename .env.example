# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_me_grafana_password

# MySQL Exporter — must match the WordPress MySQL user password
MYSQLD_EXPORTER_PASSWORD=change_me_mysql_password

# Prometheus retention
PROMETHEUS_RETENTION_TIME=15d

# Loki retention
LOKI_RETENTION_PERIOD=168h

# Alertmanager — Slack incoming webhook for alert notifications
# Create at: https://api.slack.com/apps > Your App > Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
