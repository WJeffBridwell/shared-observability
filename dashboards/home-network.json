{
  "uid": "home-network",
  "title": "Home Network",
  "description": "All 22 devices on 192.168.86.0/24 — ping status and latency",
  "tags": ["home-cloud", "network", "icmp"],
  "timezone": "browser",
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 2,
      "title": "Devices Online",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(probe_success{job=\"blackbox-icmp\"} == 1)",
          "legendFormat": "Online"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "green" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "green", "value": 18 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 3,
      "title": "Devices Offline",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(probe_success{job=\"blackbox-icmp\"} == 0) OR on() vector(0)",
          "legendFormat": "Offline"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 4,
      "title": "Avg Latency",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "avg(probe_duration_seconds{job=\"blackbox-icmp\"} > 0)",
          "legendFormat": "Avg"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.2 }
            ]
          },
          "unit": "s",
          "decimals": 1
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 5,
      "title": "Network Mesh",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(probe_success{job=\"blackbox-icmp\", category=\"network\"} == 1)",
          "legendFormat": "Mesh Nodes UP"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "green", "value": 3 }
            ]
          },
          "unit": "none",
          "mappings": [
            { "type": "value", "options": { "3": { "text": "3/3 Mesh OK", "color": "green" } } },
            { "type": "value", "options": { "2": { "text": "2/3 Mesh Degraded", "color": "yellow" } } },
            { "type": "range", "options": { "from": 0, "to": 1, "result": { "text": "Mesh Down", "color": "red" } } }
          ]
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 6,
      "title": "Compute",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(probe_success{job=\"blackbox-icmp\", category=\"compute\"} == 1)",
          "legendFormat": "Macs UP"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "2": { "text": "2/2 Macs UP", "color": "green" } } },
            { "type": "value", "options": { "1": { "text": "1/2 Macs UP", "color": "yellow" } } },
            { "type": "value", "options": { "0": { "text": "0/2 Macs UP", "color": "red" } } }
          ]
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 7,
      "title": "Total Devices",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(probe_success{job=\"blackbox-icmp\"})",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 10,
      "title": "All Devices",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 11,
      "title": "Device Status",
      "type": "table",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "probe_success{job=\"blackbox-icmp\"}",
          "legendFormat": "{{device}} ({{room}})",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "probe_duration_seconds{job=\"blackbox-icmp\"}",
          "legendFormat": "",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "transformations": [
        {
          "id": "seriesToColumns",
          "options": {
            "byField": "instance"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "__name__": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "job": true,
              "job 1": true,
              "job 2": true,
              "category 2": true,
              "device 2": true,
              "room 2": true
            },
            "renameByName": {
              "instance": "IP",
              "device 1": "Device",
              "category 1": "Category",
              "room 1": "Room",
              "Value #A": "Status",
              "Value #B": "Latency"
            },
            "indexByName": {
              "Device": 0,
              "IP": 1,
              "Category": 2,
              "Room": 3,
              "Status": 4,
              "Latency": 5
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Status" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } },
                  { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } }
                ]
              },
              { "id": "custom.cellOptions", "value": { "type": "color-background" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Latency" },
            "properties": [
              { "id": "unit", "value": "s" },
              { "id": "decimals", "value": 1 },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 0.05 },
                    { "color": "red", "value": 0.2 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          { "displayName": "Category", "desc": false }
        ]
      }
    },
    {
      "id": 20,
      "title": "By Room",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false,
      "panels": []
